---
const menuItems = [
  {
    titulo: 'Contato',
    link: 'contato',
    target: '',
    customClass:''
  },
  {
    titulo: 'Conte√∫dos',
    link: 'https://blog.sistechsoftware.com.br/',
    target: '',
    customClass:''
  }
]
---
<header id="desktop-header" class="text-white w-full sticky top-0 bg-primary-color z-50 px-4 md:px-8 lg:px-16 xl:px-32 py-3">
  <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
    <div class="flex justify-between">
      <a class="flex h-[35px]" href="/">
        <img class="h-full" src="image/logo.webp" alt="Logo Sistech">
      </a>
      <button id="hamburger">
        <svg class="lg:hidden" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#f5f5f5" viewBox="0 0 256 256"><path d="M224,128a8,8,0,0,1-8,8H40a8,8,0,0,1,0-16H216A8,8,0,0,1,224,128ZM40,72H216a8,8,0,0,0,0-16H40a8,8,0,0,0,0,16ZM216,184H40a8,8,0,0,0,0,16H216a8,8,0,0,0,0-16Z"></path></svg>
      </button>
    </div>
    <div id="menu" class="hidden lg:flex flex-col gap-8 lg:flex-row lg:items-center justify-center">
      {
          menuItems.map((item) => (
              <a class:list={["text-base font-normal text-white", `${item.customClass}`]} href={item.link} target={item.target}>{item.titulo}</a>
          ))
      }
    </div>
    <div id="contact" class="hidden lg:block w-fit text-center bg-white text-font-btn p-4 rounded-3xl">
      <a href="https://wa.me/+5586981813581" target="_blank">Entrar em Contato</a>
    </div>
  </div>

</header>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.getElementById('hamburger')!
    const menu = document.getElementById('menu')!
    const contact = document.getElementById('contact')!

    hamburger.addEventListener('click', () => {
      menu.classList.toggle('hidden')
      menu.classList.toggle('flex')
      contact.classList.toggle('hidden')
    })
  })
</script>