---
import Layout from "../layouts/Layout.astro";

---

<Layout title="Contato">
  <div class="flex flex-col items-center space-y-8 container mx-auto text-4xl py-10">
    <h1 class="flex flex-col ssm:text-3xl sm:text-4xl text-center md:text-5xl font-extrabold text-sextiary/80">
        Oi, Empreendedor Incrível!
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-quaternary from-10% via-secondary via-30% to-quintenary to-60%">
            Estamos Turbinando Nosso Motor! <span class="text-sextiary/80">🛠️</span>
        </span>
    </h1>
    <div class="pt-12 max-w-[700px]">
        <div class="bg-blur-card-dark-hero py-12 px-8">
            <p class="text-[1.35rem] text-center leading-6 font-semibold text-sextiary/80 rounded-2xl pb-12 px-8">
                Enquanto isso entre na nossa <span class="font-black text-quaternary">lista de espera</span>
            </p>
            <form class="flex flex-col justify-center lg:flex-row px-4 mx-auto">
                <!-- <div class="pl-4 border-sextiary/30 border-[0.7px] focus:border-4 rounded-lg h-10 lg:rounded-none lg:rounded-l-xl flex items-center w-full lg:w-1/2">
                    <input type="email" required class="text-sextiary/80 focus:outline-none bg-transparent flex-grow placeholder:text-sextiary/80 font-medium text-base" placeholder="E-mail">
                </div> -->
                <!-- <button type="submit" class="text-white text-base px-6 font-medium bg-gradient-to-r from-secondary from-20% to-primary to-65% p-2 mt-2 rounded-xl lg:rounded-none lg:rounded-r-xl lg:mt-0">Entrar na lista de espera</button> -->
                <a type="button" target="_blank" class="text-white text-base px-6 font-medium bg-gradient-to-r from-secondary from-20% to-primary to-65% p-2 mt-2 rounded-xl lg:mt-0 hover:cursor-pointer hover:text-extrabold hover:text-white"
                    href="https://rouvbymulgc.typeform.com/to/tgVFjuN4"
                >Entrar na lista de espera</a>
            </form>
        </div>
    </div>
  </div>
</Layout>